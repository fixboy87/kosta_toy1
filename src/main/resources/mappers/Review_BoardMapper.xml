   </select> -->
   
	<select id="countPaging" resultType="int">
		select count(r_no) 
			from	review_board 
	</select>
	
 	<select id="listCheck" parameterType="String" resultType="Hotel_OrderDTO">
		select*
			from Hotel_Order 
    		where userno=
    		(select userno from users where id = #{id}) 
    		and P_CONDITION =2
	</select> 
	
 	<select id="searchHotle_name" parameterType="int" resultType="String">
		select h_name 
			from hotel 
			where h_no=#{h_no}
	</select> 
	
	 <insert id="insertReview" parameterType="Review_BoardVO">
		insert into review_board
			(r_no, r_title, r_grade, r_content, r_redate, r_hitcount , r_fname, order_num, h_name, number_of_stay_days, userNo, id 
		)values(review_seq.nextval, #{r_title}, #{r_grade}, #{r_content}, sysdate, 0, #{r_fname}, #{order_num}, #{h_name}, #{number_of_stay_days}, #{userNo}, #{id})
	</insert> 

 	<select id="search_userNo" parameterType="String" resultType="int">
		select userNo from users where id=#{id}
	</select> 
	
<!-- 디테일 게시물	 -->
   <select id="detailReview" parameterType="Review_BoardVO" resultType="Review_BoardVO">
		select*from review_board where r_no = #{r_no}
	</select>  

<!-- 게시물 삭제 -->	
 	<delete id="deleteReivew" parameterType="Review_BoardVO">
		delete from review_board where r_no = #{r_no}
	</delete> 

<!-- 게시물 수정 -->
 	<update id="updateReview" parameterType="Review_BoardVO">
		UPDATE review_board SET r_title = #{r_title}, r_content=#{r_content}  WHERE r_no=#{r_no}
	</update>
	
