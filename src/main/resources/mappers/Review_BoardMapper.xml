<!-- listAll -->
	<select id ="listReviewAll" resultType="Review_BoardVO">
      SELECT*
      	FROM review_board
   </select>


<!-- 호텔 후기 목록 -->
   <select id ="listReview" resultType="Review_BoardVO">
      SELECT*
      	FROM review_board 
      	order by r_no desc, r_redate desc
   </select>
